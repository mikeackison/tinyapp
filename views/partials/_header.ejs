<header>



  
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(!username){ %>
    <form class="form-inline" action="/login" method="POST">
      <div class="form-group mb-2">
       
       <!-- name attribute identifies the data we are sending. -->
       <input class="form-control" type="text" name="username" placeholder="Username" style="width: 250px; margin: 0px 5px 0px 5px">
       <button type="submit" class="btn btn-outline-dark">Login</button>
  
      </div>
    </form>
    <% } else{ %>
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
         
         <p style="margin: 0px 80px 0px 0px; height: 22px"> Logged In As: <%= username %> </p>
         <button type="submit" class="btn btn-outline-dark">Logout</button>
    
        </div>
      </form>
      <% } %>

  </nav>
</header>